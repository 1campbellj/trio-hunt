    <strong class="block font-medium mb-1">Shape:</strong>
    <%= card.shape %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Texture:</strong>
    <%= card.texture %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Color:</strong>
    <%= card.color %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Number:</strong>
