<%= form_with(model: card, class: "contents") do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul class="list-disc ml-6">
        <% card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :shape %>
    <%= form.select :shape, Card.shapes, {}, {class: ["bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 pr-8", {"border-gray-400 focus:outline-blue-600": card.errors[:shape].none?, "border-red-400 focus:outline-red-600": card.errors[:shape].any?}]} %>
  </div>

  <div class="my-5">
    <%= form.label :texture %>
    <%= form.select :texture, Card.textures, {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": card.errors[:texture].none?, "border-red-400 focus:outline-red-600": card.errors[:texture].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :color %>
    <%= form.select :color, Card.colors, {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": card.errors[:color].none?, "border-red-400 focus:outline-red-600": card.errors[:color].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :number %>
    <%= form.select :number, {"1" => 1, "2" => 2, "3" => 3}, {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": card.errors[:number].none?, "border-red-400 focus:outline-red-600": card.errors[:number].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
